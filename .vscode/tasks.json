{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test",
      "type": "process",
      "command": "cmd.exe",
      "args": ["/c", "${workspaceFolder}\\.vscode\\script\\test.bat"],
      "options": {
        "statusbar": {
          "label": "$(beaker) Test",
          "color": "#2196F3",
          "detail": "Lancer les tests unitaires"
        }
      }
    },
    {
      "label": "Lancer",
      "type": "process",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/.vscode/script/run.ps1"
      ],
      "options": { 
        "cwd": "${workspaceFolder}",
        "statusbar": {
          "label": "$(rocket) Run",
          "color": "#f76353",
          "detail": "Compiler et lancer EchoDice"
        }
      }
    },
    {
      "label": "Deployer une release",
      "type": "process",
      "command": "powershell.exe",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "${workspaceFolder}/.vscode/script/build.ps1"
      ],
      "options": {
        "cwd": "${workspaceFolder}",
        "statusbar": {
          "label": "$(rocket) Release",
          "color": "#0fc715",
          "detail": "Compiler et packager EchoDice"
        }
      }
    }
  ]
}
 